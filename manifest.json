{
  "manifest_version": 3,
  "name": "GrayTTS",
  "version": "1.0",
  "permissions": [
    "tts", 
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]  
    }
  ],
  "commands": {
    "read_selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Read selected text with GrayTTS"
    }
  }
}
